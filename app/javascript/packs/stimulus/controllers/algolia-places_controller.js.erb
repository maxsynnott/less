import { Controller } from "stimulus"

export default class extends Controller {
	static targets = ["input"]

	connect() {
		// This is not secure!
		// https://community.algolia.com/places/documentation.html#restricted-api-keys
		places({
		  appId: "<%= ENV['AP_APP_ID'] %>",
		  apiKey: "<%= ENV['AP_API_KEY'] %>",
		  container: this.inputTarget,
		  countries: ['de'],
		  language: $('body').data('locale')
		});
	}
}
