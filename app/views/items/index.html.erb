<div class="container">
	<div class="input-group mt-4 mb-3 ml-auto" style="max-width: 400px; margin-right: -15px;">
	  <div class="input-group-prepend">
	    <label class="input-group-text" for="sort_by_select">Sort by</label>
	  </div>

	  <select class="custom-select" id="sort_by_select">
	    <option selected>Price: Lowest first</option>
	    <option value="1">Price: Highest first</option>
	    <option value="2">Alphabetical: A-Z</option>
	    <option value="3">Alphabetical: Z-A</option>
	  </select>
	</div>

	<div class="row bg-white pt-3">
		<% @items.each do |item| %>
			<div class="col-4 col-lg-3 my-4">
				<%= render 'item', item: item %>
			</div>
		<% end %>

		<div class="col-12">
			<%= will_paginate @items, list_classes: %w(pagination justify-content-center) %>
		</div>
	</div>
</div>
