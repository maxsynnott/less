<div class="container">
	<div class="my-4" data-controller="autocomplete" data-autocomplete-url="<%= autocomplete_items_url %>">
		<%= simple_form_for :search, url: items_path, method: :get, class: "form-inline", html: { autocomplete: "off" } do |f| %>
			<%= f.input :query, placeholder: "What are you craving", class: "form-control w-100", label: false, input_html: { data: { target: "autocomplete.input", action: "input->autocomplete#fetchResults" } } %>
			<%= f.input :tags, collection: $tags, as: :check_boxes %>
		<% end %>

		<ul class="list-group" data-target="autocomplete.results"></ul>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<div class="card border-0">
				<div class="row">
					<% @items.each do |item| %>
						<div class="col-lg-3 col-md-4">
							<%= render 'item', item: item %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<%= will_paginate @products, list_classes: %w(pagination justify-content-center) %>
</div>

<style>
	.banner {
		background: #9DDB6C;
	}

	.badge {
		position: absolute;
	}

	.top-left {
		top: 10px;
		left: 10px;
	}

	.top-right {
		top: 10px;
		right: 10px;
	}
</style>