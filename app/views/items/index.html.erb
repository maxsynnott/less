<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="card border-0">
				<div class="row">
					<% @items.each do |item| %>
						<div class="col-lg-3 col-md-4">
							<%= render 'item', item: item %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<%= will_paginate @items, list_classes: %w(pagination justify-content-center) %>
</div>
