<ul class="list-group">
	<% @deliveries.each do |delivery| %>
		<li class="list-group-item">
			<p>
				Delivery Price: <%= number_to_currency(delivery.price, unit: 'â‚¬', format: "%n%u") %>
			</p>

			<h5>
				Number of products: <%= delivery.orders.map(&:product).uniq.length %>
			</h5>

			<p>
				Scheduled at: <%= delivery.scheduled_at_time_display %> on <%= delivery.scheduled_at_date_display %>
			</p>

