<div
	class="p-5 text-center"
	data-controller="channels--delivery-tracker"
	data-channels--delivery-tracker-delivery-id="<%= @delivery.id %>"
>
	<h3>
		Your order is on the way!
	</h3>

	<h4>
		Arrival time:

		<span class="font-weight-light">
			<%= @delivery.scheduled_slot_string %>
		</span>
	</h4>

	<div
		class="mt-4 border"
		id="map"
		data-controller="mapbox"
		data-target="mapbox.map channels--delivery-tracker.map"
		data-mapbox-initial-markers="<%= @initial_markers.to_json %>"
   	style="width: 100%; height: 500px;"
  ></div>
</div>
