<div class="container bg-white mt-5 pt-5">
	<% if @order.confirmed? %>
		<%= render 'progress' %>

		<div class="mt-5 pb-3">
			<%= render "milestone_#{@order.milestone}" %>
		</div>
	<% else %>
		<div class="text-center" data-controller="channels--order-refresh" data-channels--order-refresh-order-id="<%= @order.id %>">
			<h2 class="font-weight-light">Awaiting confirmation</h2>
			<h3 class="text-muted pb-5">You will be redirected once your order is confirmed</h3>
		</div>
	<% end %>
</div>

