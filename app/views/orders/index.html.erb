<div class="container mt-5">
	<ul class="list-group list-group-flush">
		<li class="list-group-item">
			<h2 class="text-center">Your Orders</h2>

			<p class="text-muted mb-0 text-center">
				Click an order to view more information
			</p>
		</li>

		<% @orders.each do |order| %>
			<li class="list-group-item">
				<a data-toggle="collapse" role="button" href="#orderCollapsable<%= order.id %>" class="d-flex align-items-center justify-content-between text-decoration-none text-dark">
					<div>
						<p class="font-weight-bold">
							<%= order.delivery.scheduled_at.strftime("%B %d | %H:%M") %> to <%= (order.delivery.scheduled_at + 2.hours).strftime("%H:%M") %>
						</p>

						<p class="mb-0">
							<%= number_to_currency(order.total) %>
						</p>
					</div>

					<%= fa_icon 'chevron-down' %>
				</a>

				<div class="collapse border-top mt-3" id="orderCollapsable<%= order.id %>">
					<div class="d-flex justify-content-between align-items-center border-bottom py-2">
						<p class="mb-0">
							<%= order.order_items.count %> items
						</p>

						<%= link_to '#', class: "btn btn-success btn-sm" do %>
							<%= fa_icon 'plus' %>
							Add all items to cart
						<% end %>
					</div>

					<% order.order_items.each do |order_item| %>
						<div class="d-flex justify-content-between align-items-center border-bottom py-2">
							<%= link_to order_item.item.name, item_path(order_item.item) %>

							<div class="d-flex align-items-center">
								<p class="mb-0">
									<%= order_item.quantity %> grams
								</p>

								<%= link_to '#', class: "btn btn-success btn-sm ml-3", data: { toggle: 'tooltip', placement: 'right' }, title: "Add to cart" do %>
									<%= fa_icon 'plus' %>
									Add to cart
								<% end %>
							</div>
						</div>
					<% end %>

					<div class="d-flex justify-content-between align-items-center pt-2">
						<p class="mb-0 font-weight-bold">
							More options
						</p>

						<div>
							<%= link_to order_path(order), class: "btn btn-outline-success" do %>
								<%= fa_icon 'truck' %>

								Track Order
							<% end %>

							<%= link_to "#", class: "btn btn-outline-success" do %>
								<%= fa_icon 'receipt' %>

								View Receipt
							<% end %>
						</div>
					</div>
				</div>
			</li>
		<% end %>
	</ul>
</div>