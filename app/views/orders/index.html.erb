<div class="container my-5">
	<% unless @orders.empty? %>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">
				<h2 class="text-center">Your Upcoming Orders</h2>

				<p class="text-muted mb-0 text-center">
					Click an order to view more information
				</p>
			</li>

			<% @upcoming_orders.each do |order| %>
				<%= render 'order', order: order %>
			<% end %>
		</ul>

		<ul class="list-group list-group-flush mt-5">
			<li class="list-group-item">
				<h2 class="text-center">Your Past Orders</h2>

				<p class="text-muted mb-0 text-center">
					Click an order to view more information
				</p>
			</li>

			<% @past_orders.each do |order| %>
				<%= render 'order', order: order %>
			<% end %>
		</ul>
	<% else %>
		<div class="card">
			<h3 class="text-center py-5">
				You haven't made any orders
			</h3>
		</div>
	<% end %>	
</div>
