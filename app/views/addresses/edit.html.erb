<%= simple_form_for(@address) do |f| %>
	<%= f.input :recipient %>

	<%= f.input :line_1 %>

	<%= f.input :line_2 %>

	<%= f.input :postal_code %>

	<%= f.input :city, disabled: true %>

	<%= f.input :state, disabled: true %>

	<%= f.input :country, disabled: true %>

	<%= f.input :notes %>

	<%= f.submit %>
<% end %>
  