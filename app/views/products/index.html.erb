<div class="banner py-5">
	<div class="container">
		<h1 class="text-white" style="font-size: 50px;">
			Groceries
		</h1>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-3">
		  <%= render 'filters' %>
		</div>

		<div class="col-lg-9">
			<%= render 'carousel' %>

			<div class="row">
				<% @products.each do |product| %>
					<div class="col-lg-4 col-md-6 mb-4">
						<%= render 'product', product: product %>
					</div>
				<% end %>
			</div>

			<%= will_paginate @products, list_classes: %w(pagination justify-content-center) %>
		</div>
	</div>
</div>

<style>
	.banner {
		background: #9DDB6C;
	}
</style>