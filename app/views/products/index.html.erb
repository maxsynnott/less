<h1>Products</h1>

<ul class='list-group'>
	<% @products.each do |product| %>
		<li class='list-group-item'>
			<h4><%= product.name %></h4>

			<%= simple_form_for(Order.new) do |f| %>
				<%= f.hidden_field :product_id, value: product.id %>

				<%= f.input :quantity %>

				<%= f.submit %>
			<% end %>
		</li>
	<% end %>
</ul>