<div class="card" style="width: 18rem;">
  <img src="https://picsum.photos/200" class="card-img-top" alt="image of <%= product.name %>">

  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text"><%= number_to_currency(product.price * 1000, unit: 'â‚¬') %> per kg</p>

    <%= simple_form_for(Order.new, wrapper: :inline_form, html: { class: 'form-inline' }) do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>

      <%= f.input :quantity, label: false, input_html: { style: 'width: 100px; margin-right: 20px;' } %>

      <%= f.submit %>
    <% end %>
  </div>
</div>