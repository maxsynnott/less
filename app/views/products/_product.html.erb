<div class="card" id="product_<%= product.id %>">
  <% if product.image.attached? %>
    <%= image_tag product.image, class: "card-img-top", alt: product.name %>
  <% end %>
  
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text"><%= number_to_currency(product.price * 1000, unit: 'â‚¬') %> per kg</p>

    <%= simple_form_for(CartItem.new, remote: true, wrapper: :inline_form, html: { class: 'form-inline' }) do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>

      <%= f.input :quantity, label: false %>

      <%= f.submit "Add to cart" %>
    <% end %>

    <p class="card-text">In stock: <%= product.stock %>g</p>
  </div>
</div>
