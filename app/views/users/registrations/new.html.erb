<div class="container text-center d-flex justify-content-center">
	<div class="card w-50">
		<div class="card-header">
			<%= link_to "Back to less", root_path, class: "text-secondary text-left" %>

			<h1 class="card-title mb-0 font-weight-light">
				Sign up for less
			</h1>
		</div>

		<div class="card-body d-flex flex-column align-items-center">
			<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-75 mb-3' } do |f| %>
			  <%= f.input :first_name, autofocus: true, autocomplete: 'given-name', required: false %>

		    <%= f.input :email, autocomplete: "email", required: false %>

		    <%= f.input :password, autocomplete: "new-password", required: false %>

		    <%= f.input :password_confirmation, autocomplete: "new-password", required: false %>

		    <%= f.submit "Sign up", class: "btn btn-success btn-block btn-lg mt-4" %>
			<% end %>

			<%= render "users/shared/links" %>
		</div>
	</div>
</div>

<style>
	nav {
		display: none;
	}

	body {
		background: lightgreen !important;
		display: flex;
		align-items: center;
	}
</style>