<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>

    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <small><%= link_to "Back to less", root_path %></small>
              <h3 class="login-heading mb-4">
                Welcome back
              </h3>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <%= f.input :email, placeholder: "Email", autofocus: true, autocomplete: "email", wrapper_html: { class: "form-label-group" } %>

                <%= f.input :password, placeholder: "Password", autocomplete: "new-password", wrapper_html: { class: "form-label-group" } %>

                <%= f.submit "Sign in", id: "sign-in-button", class: "btn btn-lg btn-block btn-login text-uppercase font-weight-bold mb-2" %>
              <% end %>

              <div class="text-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .navbar {
    display: none;
  }
</style>
