<div class="h-100" style="width: 500px;">
	<%= simple_form_for @cart, remote: true, html: { class: "d-flex flex-column h-100" } do |f| %>
		<div class="p-3 border-bottom d-flex justify-content-between align-items-center">
			<h4 class="m-0 font-weight-light">
				Max's Shopping Cart
			</h4>

			<button class="btn btn-outline-success" data-dismiss="sidebar">
				<%= fa_icon 'times' %>

				Close
			</button>
		</div>

		<div class="container flex-grow-1">
		  <ul class="list-group list-group-flush" id='cart_items'>
		    <%= f.simple_fields_for :cart_items do |cart_item| %>
		      <%= render 'cart_item_fields', f: cart_item %>
		    <% end %>
		  </ul>
		</div>

		<div class="p-2">
			<%= f.submit "Update Cart", class: "btn btn-primary btn-block", disabled: true, id: "update_cart_button" %>

			<%= link_to new_order_path, class: "btn btn-success btn-lg btn-block position-relative" do %>
				Checkout

				<div class="position-absolute" style="background: #218838; right: 5px; bottom: 3px; padding: 0.3rem; border-radius: 4px;">
					<%= number_to_currency(@cart.total) %>
				</div>
			<% end %>
		</div>
	<% end %>
</div>