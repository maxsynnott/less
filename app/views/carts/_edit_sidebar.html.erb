<div
	class="container my-5"
>
	<%= simple_form_for @cart do |f| %>
	  <ul class="list-group list-group-flush" id='cart_items'>
	    <%= f.simple_fields_for :cart_items do |cart_item| %>
	      <%= render 'cart_item_fields', f: cart_item %>
	    <% end %>

	    <li class="list-group-item">
	    	Total: <%= number_to_currency(@cart.total) %>

	    	<%= f.submit class: "btn btn-primary" %>
	    </li>
	  </ul>
	<% end %>

	<% if current_user %>
  	<%= link_to "Checkout", new_order_path, class: "btn btn-success" %>
	<% else %>
		<div data-toggle="tooltip" title="You must be logged in to checkout" style="width: fit-content;">
			<%= link_to "Checkout", new_order_path, class: "btn btn-success disabled" %>
		</div>
	<% end %>

	<button data-dismiss="sidebar">
		Close Sidebar
	</button>
</div>
