<% flash.each do |type, msg| %>
	<% if type == :notice %>
		<div class="alert alert-success alert-dismissible fade show bottom-right mb-0" role="alert">
		  <%= flash[:notice] %>

		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	      <span aria-hidden="true">&times;</span>
	    </button>
		</div>
	<% elsif type == :alert %>
		<div class="alert alert-danger alert-dismissible fade show bottom-right mb-0" role="alert">
		  <%= flash[:alert] %>

		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	      <span aria-hidden="true">&times;</span>
	    </button>
		</div>
	<% end %>
<% end %>