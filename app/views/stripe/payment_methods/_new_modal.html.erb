<div class="modal-body">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>

	<div class="container p-5" data-controller="stripe" data-stripe-client-secret="<%= @setup_intent.client_secret %>">
		<div class="card w-75 border-0 p-2 bg-light mx-auto">
			<div class="d-flex align-items-end justify-content-between">
				<small class="mb-1 text-muted">
					Your card details will not be stored on Less servers
				</small>

				<%= link_to "https://www.stripe.com" do %>
					<%= image_tag "stripe_badge_solid_dark", class: "mb-2", style: "height: 26px; width: 119px;" %>
				<% end %>
			</div>

			<div class="d-flex align-item-center">
				<div id="card-element" class="flex-grow-1">
				  <!-- Stripe Element will be inserted here -->
				</div>

				<button type="button" class="btn btn-success ml-2" data-action="stripe#confirmCardSetup">
					Save card
				</button>
			</div>

			<!-- Used to display form errors -->
			<div id="card-errors" role="alert"></div>
		</div>
	</div>
</div>
